<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Balance"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtIngresos"
        android:text="Ingresos: $0.0"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtEgresos"
        android:text="Egresos: $0.0"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtBalance"
        android:text="Balance: $0.0"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- NUEVOS CAMPOS -->

    <TextView
        android:id="@+id/txtIVA"
        android:text="Total IVA: $0.0"
        android:textSize="16sp"
        android:layout_marginBottom="4dp"
        android:textColor="#8E44AD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtGravados"
        android:text="Movimientos Gravados: 0"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:textColor="#2980B9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- BOTONES -->

    <Button
        android:id="@+id/btnDetalles"
        android:text="Ver Detalles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#2980B9"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btnVolver"
        android:text="Volver"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#95A5A6"
        android:textColor="#FFF" />

</LinearLayout>
